assert((255).to_hex(8) == "000000FF");
assert((10).to_hex(2) == "0A");
assert((4096).to_hex(4) == "1000");

// Test with 0 digits (no padding)
assert((255).to_hex(0) == "FF");
assert((10).to_hex(0) == "A");

// Test with a negative number
assert((-1).to_hex(16) == "FFFFFFFFFFFFFFFF");

$println("Hex format tests passed");
