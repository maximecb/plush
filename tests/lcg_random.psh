// A simple Linear Congruential Generator (LCG) for pseudo-random numbers.
class LCG {
    init(self, seed) {
        self.state = seed;
        self.a = 1103515245;
        self.c = 12345;
        self.m = 0x80000000;
    }

    // Generate the next random integer.
    next(self) {
        self.state = (self.a * self.state + self.c) % self.m;
        return self.state;
    }
}

// Create a new LCG with an initial seed.
let rng = LCG(1);

// This should be deterministic and it shouldn't
// If the values change, it means we broke something
assert(rng.next() == 1103527590);
assert(rng.next() == 377401575);
assert(rng.next() == 662824084);
assert(rng.next() == 1147902781);
assert(rng.next() == 2035015474);
